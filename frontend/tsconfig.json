{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["DOM", "DOM.Iterable", "ES2020"],
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,           // строгие проверки включены
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
  }
  